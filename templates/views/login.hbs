{{>head title="Login"}}

{{>navbar}}

<div class="container mt-5">
  <p class="fw-lighter"><h4>Log In to Continue</h4></p>
</div>
<div class="container mt-5">


<div class="border d-flex flex-column" style="width:50rem;">
  <div class="mx-4 p-3">
    <div class="text-center mt-4 mb-4">
      <p class="h4">Sign in</p>
    </div>

    <form action="/login" method="post">
    <div class="cs-form">
      <input type="email" class="form-control border-top-0 border-left-0 border-right-0" name="email"/>
      <label>E-mail</label>
    </div>
    <div class="cs-form">
      <input type="password" class="form-control border-top-0 border-left-0 border-right-0" name="password"/>
      <label>Password</label>
    </div>

    <!---
    <div class="d-flex flex-wrap justify-content-center align-items-center">
      <input type="checkbox" class="me-1" />
      <p class="m-0">Remember me</p>
      <a class="text-decoration-none ms-3" href="#">Forgot Password ?</a>
    </div>
    -->
    <button class="btn btn-dark btn-block my-3">
      Sign in
    </button>
    <p class="text-center">Not a member? <a class="text-decoration-none" href="/register_form">Register</a></p>
    <p class="text-center">Login as <a class="text-decoration-none" href="/adminLogin"> Admin </a></p>
    <div class="my-3 d-flex justify-content-center">
      <button class="m-0 btn btn-flat">
        <i class="fab fa-facebook-f"></i>
      </button>
      <button class="m-0 btn btn-flat">
        <i class="fab fa-twitter"></i>
      </button>
      <button class="m-0 btn btn-flat">
        <i class="fab fa-google-plus-g"></i>
      </button>
    </div>

  </form>
  </div>
</div>

</div>
